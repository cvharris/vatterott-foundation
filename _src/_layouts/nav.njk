<!-- nav.njk -->
<nav id="main-menu" class="right nav-menu">
  <div class="menu-section">
    {% for section in site.data.menu %}
      {% if section.children.length %}
      {% else %}
        <a href="<$ section.route $>" target="<$ section.target $>" class="section-link">
          <$ section.label $>
        </a>
      {% endif %}
      {% for child in section.children %}
        <a title="<$ child.description $>" href="<$ child.route $>" target="<$ child.target $>" class="section-link"><$ child.label $></a>
      {% endfor %}
    {% endfor %}
  </div>
</nav>
